// 背景图片
bg-image($url)
  background-image: url($url + "@2x.png")
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background-image: url($url + "@3x.png")

// 不换行
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap
  //1px border

boder-1px($color)
  position: relative
  &::after
    display: block
    position: absolute
    left: 0px
    bottom: 0px
    width:100%
    background-color: $color
    height:1px
    content: ''

boder-1px-top($color)
  position: relative
  &::after
    display :block
    position absolute
    left :0px
    top :0px
    height :1px
    width:100%
    background-color: $color
    content:' '
    // 扩展点击区域
extend-click()
  position: relative
  &:before
    content: ''
    position: absolute
    top: -10px
    left: -10px
    right: -10px
    bottom: -10px

